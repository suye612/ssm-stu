<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ytj.ssm.dao.StudentDao">

	<sql id="sql_where">
		<if test="student.name != null and student.name !=''">
			and name like concat('%',#{student.name},'%')
		</if>
		<if test="student.studentNo != null and student.studentNo !=''">
			and studentNo like concat('%',#{student.studentNo},'%')
		</if>
		<if test="student.profession != null and student.profession !=''">
			and profession like concat('%',#{student.profession},'%')
		</if>
		<if test="student.sex != null ">
			and sex = #{student.sex}
		</if>
		<if test="student.age != null ">
			and age = #{student.age}
		</if>
	</sql>
	<select id="studentByName" parameterType="int" resultType="com.ytj.ssm.model.StudentModel">
		select * from student where id = 1
	</select>

	<!--查询总行数  -->
	<select id="queryAllCount" resultType="Integer" parameterType="com.ytj.ssm.model.StudentModel">
		select count(1) from tb_student
		where status = 1
		<include refid="sql_where"></include>
	</select>
	
	<!--查询所有  -->
	<select id="queryAll" resultType="com.ytj.ssm.model.StudentModel">
		select
		id,
		name,
		student_no as studentNo,
		sex,
		age,
		profession
		from tb_student
		<where>
		status = 1
		<include refid="sql_where"></include>
		</where>
		limit #{page},#{pageSize}
	</select>

</mapper>